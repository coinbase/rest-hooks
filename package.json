{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "yarn run build:clean && yarn run build:types && lerna publish",
    "lint": "eslint --ext .ts,.tsx",
    "format": "eslint --fix \"packages/*/!(node_modules)/**/*.{js,ts,tsx}\"",
    "clean": "lerna clean",
    "build": "ttsc --build && lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "build:types": "ttsc --build",
    "test": "lerna run test --stream",
    "test:ci": "lerna run --stream test:ci",
    "test:coverage": "lerna run test:coverage --stream"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@anansi/babel-preset": "^0.22.1",
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.13",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@zerollup/ts-transform-paths": "^1.7.7",
    "babel-jest": "^24.9.0",
    "conventional-changelog-anansi": "^0.1.1",
    "core-js": "^3.4.1",
    "cpy-cli": "^2.0.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.0.9",
    "ignore-styles": "^5.0.1",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "nock": "^11.6.0",
    "prettier": "^1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.4",
    "rollup": "^1.27.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.2",
    "ttypescript": "^1.5.8",
    "typescript": "^3.7.2"
  },
  "resolutions": {
    "@lerna/conventional-commits": "https://github.com/ntucker/lerna-conventional-commits.git"
  }
}
